<?xml version="1.0"?>
<robot name="imu" xmlns:xacro="http://ros.org/wiki/xacro">
	<xacro:macro name="imu" params="imu_prefix imu_link">
        <gazebo reference="${imu_link}">
            <sensor type="imu" name="${imu_prefix}_imu">
                <always_on>1</always_on>
                <update_rate>60</update_rate>
                <visualize>1</visualize>
                <plugin name="${imu_prefix}_imu_controller" filename="libgazebo_ros_imu_sensor.so">
                    <alwaysOn>true</alwaysOn>
                    <updateRateHZ>60</updateRateHZ>
                    <bodyName>${imu_link}</bodyName>
                    <frameName>${imu_link}</frameName>
                    <topicName>${imu_prefix}_imu/data</topicName>
                    <serviceName>imu_service</serviceName>
                    <xyzOffset>0 0 0</xyzOffset>
                    <rpyOffset>0 0 0</rpyOffset>
                    <gaussianNoise>0.0</gaussianNoise>
                </plugin>
            </sensor>
        </gazebo>
	</xacro:macro>
</robot>